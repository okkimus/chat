<p id="notice"><%= notice %></p>

<h1>
  Room: <%= @room.name %>
</h1>

<p>
  <strong>Users online:</strong>
  <%  @room.users.each do |user| %>
    <ul>
      <li><strong><%= link_to user.name, user %></strong></li>
    </ul>
  <% end %>
</p>


<div class="chatWindow" data-rooms_id="<%= @room.id %>">
  <ul id="viestit">
  </ul>
</div>

<div>
  <% if current_user %>
    <div>
      <h3>Send a message:</h3>

      <%= render 'messages/form' %>
    </div>

  <% end %>
</div>
<div class="">
  <button type="button" id="test">Start updating the chat!</button>
  <p>
    <em>To stop updating, refresh the page (F5)</em>
  </p>
</div>
<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>