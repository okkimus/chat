<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>

      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <% if room.privacy %>
          <td>Yes</td>
        <% else %>
          <td>No</td>
        <% end %>
        <% if not room.users.ids.include?(current_user.id) %>
          <td><%= link_to 'Join', room, method: :post %></td>
        <% else %>
          <td><%= link_to 'Show', room %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
